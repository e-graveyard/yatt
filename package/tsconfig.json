{
  "compilerOptions": {
    "lib": ["ES2019", "ES2020", "ES2021"],
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@yatt/*": ["src/*"]
    },
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "docs"
  ]
}

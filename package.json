{
  "name": "yatt",
  "version": "0.1.0",
  "description": "Yet Another TypeScript Template",
  "main": "dist/index.js",
  "author": "Caian R. Ertl",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caian-org/yatt.git"
  },
  "bugs": {
    "url": "https://github.com/caian-org/yatt/issues"
  },
  "homepage": "https://github.com/caian-org/yatt#readme",
  "keywords": [
    "typescript",
    "nodejs",
    "template",
    "yatt"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "start:watch": "nodemon",
    "build:js": "tsc -p tsconfig.json",
    "build:docs": "typedoc --theme ./node_modules/typedoc-neo-theme/bin/default --plugin typedoc-neo-theme src && cp logo.svg docs",
    "fix:style": "prettier --no-semi --print-width 100 --single-quote --trailing-comma none --write 'src/*.ts' && standardx --fix 'src/*.ts'",
    "check:lint": "eslint --format=codeframe 'src/*.ts'",
    "check:style": "standardx",
    "check:duplicated": "jscpd src",
    "check:all": "npm run check:lint && npm run check:style && npm run check:duplicated",
    "test": "jest --verbose",
    "test:unit": "jest --collect-coverage",
    "coverage": "codecov --token=\"$CODECOV_TOKEN\"",
    "prepare": "[ \"$NODE_ENV\" == \"production\" ] && exit 0; husky install"
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "lint-staged": {
    "src/*.js": [
      "npm run fix:style"
    ]
  },
  "jscpd": {
    "threshold": 5,
    "reporters": [
      "html",
      "console"
    ],
    "absolute": true,
    "gitignore": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/src/**/*.{js,jsx,ts,tsx}",
      "!src/index.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    }
  },
  "nodemonConfig": {
    "ignore": [
      "test",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run build:js && npm start",
    "ext": "ts"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "codecov": "^3.8.2",
    "eslint": "^7.30.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jscpd": "^3.3.26",
    "lint-staged": "^11.0.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "standardx": "^7.0.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typedoc": "^0.20.36",
    "typedoc-neo-theme": "^1.1.1",
    "typescript": "^4.2.4",
    "vrelease-bin": "^0.3.1"
  }
}

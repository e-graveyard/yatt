{
  "name": "yatt",
  "version": "2.0.1",
  "description": "Yet Another TypeScript Template",
  "main": "dist/index.js",
  "author": "Caian Ertl <hi@caian.org>",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caian-org/yatt.git"
  },
  "bugs": {
    "url": "https://github.com/caian-org/yatt/issues"
  },
  "homepage": "https://github.com/caian-org/yatt#readme",
  "keywords": [
    "typescript",
    "nodejs",
    "template",
    "yatt"
  ],
  "scripts": {
    "all": "pnpm run build:js && pnpm run build:docs && pnpm run check:all && pnpm test && pnpm run clean",
    "start": "node dist/index.js",
    "start:watch": "nodemon",
    "build:js": "swc src --out-dir dist & tsc --skipLibCheck --noEmit",
    "build:js:clean": "rm -rf dist && pnpm run build:js",
    "build:docs": "typedoc src && cp logo.svg docs",
    "bump:dev": "ncu --upgrade --dep dev --target minor",
    "bump:prod": "ncu --upgrade --dep prod --target minor",
    "bump:all": "pnpm run bump:dev && pnpm run bump:prod",
    "check:build": "tsc --noEmit",
    "check:lint": "eslint --format=codeframe '**/*.ts'",
    "check:style": "standardx",
    "check:duplicated": "jscpd",
    "check:all": "pnpm run check:build && pnpm run check:lint && pnpm run check:style && pnpm run check:duplicated",
    "fix:style": "prettier --no-semi --print-width 100 --single-quote --trailing-comma none --write '**/*.ts' && standardx --fix '**/*.ts'",
    "test": "jest --verbose --collect-coverage",
    "clean": "rm -rf coverage dist docs report",
    "commit": "cz",
    "prepare": "[ \"$NODE_ENV\" == \"production\" ] && exit 0; husky install"
  },
  "_moduleAliases": {
    "@yatt": "dist"
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "eslintIgnore": [
    "dist",
    "docs",
    "report"
  ],
  "lint-staged": {
    "**/*.ts": [
      "pnpm run fix:style"
    ]
  },
  "jscpd": {
    "threshold": 5,
    "reporters": [
      "html",
      "console"
    ],
    "absolute": true,
    "gitignore": true,
    "ignore": [
      "**/.github/**",
      "**/dist/**",
      "**/docs/**",
      "**/report/**"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/src/**/*.{js,jsx,ts,tsx}",
      "!dist/**/*.js",
      "!src/index.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    },
    "moduleNameMapper": {
      "^@yatt/(.*)$": "<rootDir>/src/$1"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "test",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "pnpm run build:js && pnpm start",
    "ext": "ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "module-alias": "^2.2.2",
    "regenerator-runtime": "^0.13.9",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.165",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.13.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-formatter-codeframe": "^7.32.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jscpd": "^3.4.5",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "npm-check-updates": "^12.5.9",
    "prettier": "^2.6.2",
    "standardx": "^7.0.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.3",
    "vrelease-bin": "^0.3.2"
  }
}

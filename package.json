{
  "name": "yatt",
  "version": "1.3.0",
  "description": "Yet Another TypeScript Template",
  "main": "dist/index.js",
  "author": "Caian Ertl <hi@caian.org>",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caian-org/yatt.git"
  },
  "bugs": {
    "url": "https://github.com/caian-org/yatt/issues"
  },
  "homepage": "https://github.com/caian-org/yatt#readme",
  "keywords": [
    "typescript",
    "nodejs",
    "template",
    "yatt"
  ],
  "scripts": {
    "all": "npm run build:js && npm run build:docs && npm run fix:style && npm run check:all && npm test && npm run clean",
    "start": "node dist/index.js",
    "start:watch": "nodemon",
    "build:js": "swc src --out-dir dist & tsc --skipLibCheck --noEmit",
    "build:js:clean": "rm -rf dist && npm run build:js",
    "build:docs": "typedoc src && cp logo.svg docs",
    "bump:dev": "ncu --upgrade --dep dev --target minor",
    "bump:prod": "ncu --upgrade --dep prod --target minor",
    "bump:all": "npm run bump:dev && npm run bump:prod",
    "check:build": "tsc --noEmit",
    "check:lint": "eslint --format=codeframe '**/*.ts'",
    "check:style": "standardx",
    "check:duplicated": "jscpd",
    "check:all": "npm run check:build && npm run check:lint && npm run check:style && npm run check:duplicated",
    "fix:style": "prettier --no-semi --print-width 100 --single-quote --trailing-comma none --write '**/*.ts' && standardx --fix '**/*.ts'",
    "test": "jest --verbose --collect-coverage",
    "test:cov": "npm test && codecov --token=\"$CODECOV_TOKEN\"",
    "clean": "rm -rf coverage dist docs report",
    "commit": "cz",
    "prepare": "[ \"$NODE_ENV\" == \"production\" ] && exit 0; husky install"
  },
  "_moduleAliases": {
    "@yatt": "dist"
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "eslintIgnore": [
    "dist",
    "docs",
    "report"
  ],
  "lint-staged": {
    "**/*.ts": [
      "npm run fix:style"
    ]
  },
  "jscpd": {
    "threshold": 5,
    "reporters": [
      "html",
      "console"
    ],
    "absolute": true,
    "gitignore": true,
    "ignore": [
      "**/.github/**",
      "**/dist/**",
      "**/docs/**",
      "**/report/**"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/src/**/*.{js,jsx,ts,tsx}",
      "!dist/**/*.js",
      "!src/index.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    },
    "moduleNameMapper": {
      "^@yatt/(.*)$": "<rootDir>/src/$1"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "test",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run build:js && npm start",
    "ext": "ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@swc/cli": "^0.1.51",
    "@swc/core": "^1.2.105",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "codecov": "^3.8.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jscpd": "^3.3.26",
    "lint-staged": "^11.2.6",
    "nodemon": "^2.0.14",
    "npm-check-updates": "^11.8.5",
    "prettier": "^2.4.1",
    "standardx": "^7.0.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typedoc": "^0.20.37",
    "typescript": "^4.2.4",
    "vrelease-bin": "^0.3.1"
  },
  "dependencies": {
    "module-alias": "^2.2.2",
    "regenerator-runtime": "^0.13.9",
    "winston": "^3.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
